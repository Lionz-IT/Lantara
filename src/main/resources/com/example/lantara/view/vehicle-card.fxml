<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="vehicle-card" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lantara.controller.VehicleCardController">
   <children>
      <Label fx:id="nopolLabel" styleClass="card-nopol" text="B 1234 ABC" />
      <Label fx:id="merekModelLabel" styleClass="card-merek" text="Toyota Avanza (2022)" />
      <Separator prefWidth="200.0">
         <VBox.margin><Insets bottom="10.0" top="10.0" /></VBox.margin>
      </Separator>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="statusLabel" text="Tersedia" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="kapasitasLabel" styleClass="card-details" text="7 Penumpang" />
         </children>
      </HBox>
      <Region VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <VBox.margin><Insets top="20.0" /></VBox.margin>
         <children>
            <Button fx:id="editButton" onAction="#handleEditAction" styleClass="card-action-button" text="Edit" />
            <Button fx:id="deleteButton" onAction="#handleDeleteAction" styleClass="card-action-button" text="Hapus" />
         </children>
      </HBox>
   </children>
</VBox>