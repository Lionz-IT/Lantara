<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane hgap="25.0" styleClass="dashboard-grid" vgap="25.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lantara.controller.DashboardContentController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="60.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="40.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="50.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <children>
        <VBox styleClass="dashboard-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <children>
                <GridPane hgap="10.0" vgap="10.0" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" percentWidth="40.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0" percentWidth="60.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
                        <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                    </rowConstraints>
                    <children>
                        <VBox alignment="TOP_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <children>
                                <Label text="Jumlah Kendaraan" />
                                <Label fx:id="totalVehicleLabel" styleClass="card-big-number" text="4" />
                            </children>
                            <padding>
                                <Insets top="5.0" />
                            </padding>
                        </VBox>

                        <PieChart fx:id="vehicleStatusChart" legendVisible="true" title="" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="2">
                            <GridPane.margin>
                                <Insets left="15.0" />
                            </GridPane.margin>
                        </PieChart>
                    </children>
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </GridPane>
            </children>
        </VBox>

        <VBox styleClass="dashboard-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <children>
                <Label styleClass="card-title" text="Notifikasi" />
                <VBox fx:id="notificationBox" spacing="10.0" />
            </children>
        </VBox>

        <VBox styleClass="dashboard-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <children>
                <Label styleClass="card-title" text="Riwayat Peminjaman" />
                <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colHistoryTanggal" prefWidth="120.0" text="Tanggal" />
                        <TableColumn fx:id="colHistoryKendaraan" prefWidth="150.0" text="Kendaraan" />
                        <TableColumn fx:id="colHistoryPengemudi" prefWidth="150.0" text="Pengemudi" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    </TableView>
            </children>
        </VBox>

        <VBox styleClass="dashboard-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <Label styleClass="card-title" text="Penugasan" />
                <VBox fx:id="assignmentBox" spacing="10.0" />
            </children>
        </VBox>
    </children>

    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

</GridPane>