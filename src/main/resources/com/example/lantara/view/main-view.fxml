<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lantara.controller.MainViewController">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <children>
      <BorderPane>
         <left>
            <Label styleClass="content-title" text="Daftar Kendaraan" BorderPane.alignment="CENTER" />
         </left>
         <right>
   <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
      <children>
         <Button fx:id="addNewVehicleButton" onAction="#handleAddNewVehicle" styleClass="content-button" text="Tambah Kendaraan Baru" />
      </children>
   </HBox>

         </right>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </BorderPane>
      
      <TableView fx:id="vehicleTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colNomorPolisi" text="No. Polisi" />
            <TableColumn fx:id="colMerek" text="Merek" />
            <TableColumn fx:id="colModel" text="Model" />
            <TableColumn fx:id="colTahun" text="Tahun" />
            <TableColumn fx:id="colStatus" text="Status" />
            <TableColumn fx:id="colJenis" text="Jenis Kendaraan" />
            <TableColumn fx:id="colKapasitas" text="Kapasitas" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>